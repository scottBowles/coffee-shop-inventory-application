extends layout

block content
  h1= item.name
  p Category: #[a(href=item.category.url) #{item.category.name}]
  p Description: #{item.description}
  p Quantity in Stock: #{item.quantityInStock}

  if item.forSale
    p SKU: #{item.sku}
    p Price: #{item.price}
  else
    p [Not marked for sale]

